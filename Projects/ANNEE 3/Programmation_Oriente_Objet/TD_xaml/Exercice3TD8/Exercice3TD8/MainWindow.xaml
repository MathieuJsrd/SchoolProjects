<Window x:Class="Exercice3TD8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercice3TD8"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="235">
    <StackPanel Margin="10">
        <TextBlock Height="41" TextWrapping="Wrap" Margin="0,0,10,0">
    Tapez votre nom et appuyez sur "entrée"
        </TextBlock>
        <Label Content="_Name:" Target="{Binding ElementName=txtNom}"  />
        <TextBox Name="zoneEntree" KeyDown="OnKeyDownHandler"/>
        <TextBlock Height="30" Name="txtNom"/>
    </StackPanel>
</Window>
